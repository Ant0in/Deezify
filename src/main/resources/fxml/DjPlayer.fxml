<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<VBox fx:id="labelContainer"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      prefWidth="400" prefHeight="600"
      spacing="20" alignment="TOP_CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #0d1b2a, #000000); -fx-padding: 30;">

    <HBox fx:id="djButtonContainer">
        <Button fx:id="playButton" text="Play" style="-fx-background-color: #41729f; -fx-text-fill: white;"/>
        <Button fx:id="pauseButton" text="Pause" style="-fx-background-color: #41729f; -fx-text-fill: white;"/>
        <Button fx:id="gainButton" text="Gain Mode" style="-fx-background-color: #41729f; -fx-text-fill: white;"/>
        <Button fx:id="pressureButton" text="Pressure Mode" style="-fx-background-color: #41729f; -fx-text-fill: white;"/>
        <Button fx:id="bassBoostButton" text="Bass Boost Mode" style="-fx-background-color: #41729f; -fx-text-fill: white;"/>
    </HBox>
</VBox>