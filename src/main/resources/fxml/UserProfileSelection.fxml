<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            prefHeight="720.0" prefWidth="1280.0" stylesheets="@../css/style2.css">
    <center>
        <VBox alignment="CENTER" spacing="40">
            <Label fx:id="titleLabel" text="??userProfile.selectProfile??" styleClass="userProfile-text"/>
            
            <FlowPane fx:id="userAccounts" alignment="CENTER" hgap="40" vgap="40">
            </FlowPane>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="40" />
            </padding>
            <Button fx:id="addProfileButton" text="??userProfile.addUser??" styleClass="button" />
            <ToggleButton fx:id="toggleDeleteProfilesButton" text="??userProfile.toggle??" styleClass="button" />
        </HBox>
    </bottom>
</BorderPane>