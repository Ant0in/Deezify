<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5" HBox.hgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1">
    <HBox alignment="CENTER" spacing="5">
        <children>
            <StackPane HBox.hgrow="ALWAYS">
                <children>
                    <TextField fx:id="autoCompletion"
                               style="-fx-text-fill: lightgray; -fx-background-color: transparent;"
                               editable="false"
                               mouseTransparent="true"
                               focusTraversable="false"
                               HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="songInput"
                               styleClass="input"
                               style="-fx-background-color: transparent;"
                               promptText="Search..."
                               HBox.hgrow="ALWAYS"/>
                </children>
            </StackPane>
            <Button fx:id="addSongButton" mnemonicParsing="false" text="+" />
        </children>
    </HBox>

    <ListView fx:id="listView" styleClass="songs" VBox.vgrow="ALWAYS" />
</VBox>
