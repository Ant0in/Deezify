<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox spacing="5" HBox.hgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1">
    <HBox alignment="CENTER">
        <children>
            <TextField fx:id="songInput" promptText="Search..." styleClass="input" HBox.hgrow="ALWAYS" />
            <Button fx:id="addSongButton" mnemonicParsing="false" text="+" />
        </children>
    </HBox>
    <ListView fx:id="listView" styleClass="songs" VBox.vgrow="ALWAYS" />
</VBox>
