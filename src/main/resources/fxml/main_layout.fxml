<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<?import javafx.scene.layout.Pane?>
<BorderPane fx:id="labelContainer" prefHeight="500" prefWidth="920" styleClass="body" stylesheets="@../css/style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 5;">
         <Button fx:id="btnSettings" onAction="#handleSettings" styleClass="settingsbtn" />
         <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
         <Button fx:id="exitButton" onAction="#handleExitApp" styleClass="exitbtn" />
      </HBox>
   </top>
   <center>
      <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
         <VBox alignment="TOP_LEFT" spacing="5" HBox.hgrow="ALWAYS">
            <TextField fx:id="songInput" promptText="Search..." styleClass="input" />
            <ListView fx:id="playListView" styleClass="songs" VBox.vgrow="ALWAYS" />
         </VBox>
         <VBox spacing="5">
            <ListView fx:id="queueListView" prefWidth="160" styleClass="queue" VBox.vgrow="ALWAYS" />
            <Button fx:id="addSongButton" maxWidth="Infinity" onAction="#handleAddSong" styleClass="queueButton" text="ADD" />
            <Button fx:id="deleteSongButton" maxWidth="Infinity" onAction="#handleDeleteSong" styleClass="queueButton" text="DEL" />
            <Button fx:id="clearQueueButton" maxWidth="Infinity" onAction="#handleClearQueue" styleClass="queueButton" text="CLEAR" />
         </VBox>
      </HBox>
   </center>

   <bottom>
      <VBox fx:id="controls"/>

   </bottom>

</BorderPane>
