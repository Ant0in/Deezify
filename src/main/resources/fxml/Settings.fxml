<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="300" prefWidth="400" style="-fx-padding: 20;" stylesheets="@../css/style_settings.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
                <Label fx:id="languageTitle" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Language Settings" />
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="languageSelect" text="Select Language:" />
                    <ComboBox fx:id="languageComboBox" prefWidth="150">
                    </ComboBox>
                </HBox>
            </VBox>
            <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
                <Label fx:id="balanceTitle" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Audio Balance" />
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="left" text="L" />
                    <Slider fx:id="balanceSlider" max="1.0" min="-1.0" prefWidth="200" value="0.0" />
                    <Label fx:id="right" text="R" />
                    <Label fx:id="balanceLabel" text="0" />
                </HBox>
            </VBox>
         <HBox prefHeight="100.0" prefWidth="200.0" spacing="30.0">
            <children>
               <Button fx:id="browseButton" mnemonicParsing="false" text="Select Music Folder" />
               <Label fx:id="directoryLabel" prefHeight="17.0" prefWidth="161.0" text="None" />
            </children>
         </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Button fx:id="saveButton" onAction="#handleSave" text="Save" />
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
        </HBox>
    </bottom>

</BorderPane>
