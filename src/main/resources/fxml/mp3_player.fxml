<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="ulb.views.MP3PlayerController" stylesheets="@/css/style.css">

    <!-- TOP: Song Title Display -->
    <Label fx:id="songTitleLabel" text="No song playing" style="-fx-font-size: 18px; -fx-font-weight: bold;" BorderPane.alignment="CENTER"/>

    <!-- CENTER: Progress Bar -->
    <VBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
        <ProgressBar fx:id="progressBar" prefWidth="300"/>
    </VBox>

    <!-- BOTTOM: Controls -->
    <HBox spacing="15" alignment="CENTER" BorderPane.alignment="CENTER">
        <Button text="⏮️ Prev" onAction="#handlePrev"/>
        <Button text="▶️ Play" onAction="#handlePlay"/>
        <Button text="⏸️ Pause" onAction="#handlePause"/>
        <Button text="⏹️ Stop" onAction="#handleStop"/>
        <Button text="⏭️ Next" onAction="#handleNext"/>
        <Slider fx:id="volumeSlider" min="0" max="1" value="0.5" prefWidth="100"/>
    </HBox>

    <!-- Padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

</BorderPane>
