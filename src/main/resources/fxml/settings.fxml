<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="400" prefHeight="300"
            style="-fx-padding: 20;">

    <center>
        <VBox spacing="20" alignment="CENTER">
            <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
                <Label fx:id="languageTitle" text="Language Settings" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="languageSelect" text="Select Language:" />
                    <ComboBox fx:id="languageComboBox" prefWidth="150">
                    </ComboBox>
                </HBox>
            </VBox>
            <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
                <Label fx:id="balanceTitle" text="Audio Balance" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="left" text="L"/>
                    <Slider fx:id="balanceSlider" prefWidth="200" min="-1.0" max="1.0" value="0.0"/>
                    <Label fx:id="right" text="R"/>
                    <Label fx:id="balanceLabel" text="0"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <Button fx:id="saveButton" text="Save" onAction="#handleSave"/>
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </bottom>

</BorderPane>